        <div class="field" style="clear:both;">
          <label i18n:translate="cedesmember_label_postal_code" tal:attributes="style label_style | nothing;"></label>&nbsp;:
          <metal:fieldMacro use-macro="python: here.widget('postal_code', mode='view')" />
