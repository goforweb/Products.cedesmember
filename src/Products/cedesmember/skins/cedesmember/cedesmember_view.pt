<html xmlns="http://www.w3.org/1999/xhtml"
  xml:lang="en-US"
  lang="en-US"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"      
  i18n:domain="plone">
  
  <metal:block define-macro='css'>
    <tal:block define="dummy python:request.set('disable_border',1)" />
  </metal:block>
  
  <metal:block define-macro='header'>
    <h1 class="brownHeader">
      Données personnelles
    </h1>
    <br/>
    <a href=""
      class="link-parent"
      tal:attributes="href string: $portal_url/plone_memberprefs_panel"
      tal:condition="python:here.id ==member.id">
      Retourner au menu : « Mon compte » 
    </a>
  </metal:block>
  
  <metal:body_macro metal:define-macro="body" i18n:domain="cedesmember">
    
    <fieldset>
      <legend>Vos informations d'abonné</legend>
      <div class="field">
        <label i18n:translate="cedesmember_label_id"></label>&nbsp;:
        <metal:fieldMacro use-macro="python: here.widget('id', mode='view')" />
      </div>
      <div class="field">
        <label i18n:translate="cedesmember_label_email"></label>&nbsp;:
        <metal:fieldMacro use-macro="python: here.widget('email', mode='view')" />
      </div>
      <div class="field">
        <label i18n:translate="cedesmember_label_member_type"></label>&nbsp;:
        <metal:fieldMacro use-macro="python: here.widget('member_type', mode='view')" />
      </div>
    </fieldset>
    
    <fieldset>
      <legend>Vos coordonnées</legend>
      <span tal:define="label_style string:float:left;;width:300px;;text-align:right;;padding-right:7px;;">
        
        <div class="field" style="clear:both;">
          <label i18n:translate="cedesmember_label_fullname" tal:attributes="style label_style | nothing;"></label>&nbsp;:
          <metal:fieldMacro use-macro="python: here.widget('fullname', mode='view')" />
        </div>
        <div class="field" style="clear:both;">
          <label i18n:translate="cedesmember_label_lastname_married" tal:attributes="style label_style | nothing;"></label>&nbsp;:
