        <div class="field" style="clear:both;">
          <label i18n:translate="cedesmember_label_locality" tal:attributes="style label_style | nothing;"></label>&nbsp;:
          <metal:fieldMacro use-macro="python: here.widget('locality', mode='view')" />
        </div>
        <div class="field" style="clear:both;">
          <label i18n:translate="cedesmember_label_country" tal:attributes="style label_style | nothing;"></label>&nbsp;:
          <metal:fieldMacro use-macro="python: here.widget('country', mode='view')" />
        </div>        
        <div class="field" style="clear:both;">
          <label i18n:translate="cedesmember_label_phone" tal:attributes="style label_style | nothing;"></label>&nbsp;:
          <metal:fieldMacro use-macro="python: here.widget('phone', mode='view')" />
        </div>
      </span>
    </fieldset>

